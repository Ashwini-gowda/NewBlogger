
<%= simple_form_for(@article) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <%= f.input :image %>
    <!-- <div class="input-group">
      <input type="text" class="col-sm-10 uploaded-file" /><span class="col-sm-2 browse-btn">Browse Image</span>
    </div> -->
  <div class="form-inputs justify-content-center">
    <%= f.input :title %>
    <%= f.input :author %>
    <%= f.input :content %>

    <div>
      <%= f.fields_for :sub_categories do |sub_category| %>
      <%= sub_category.input :name, label: 'SubCategory name', collection: SubCategory.all %>
      <% end %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
